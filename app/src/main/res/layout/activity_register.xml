<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/default_bkg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <include
        android:id="@+id/titleview"
        layout="@layout/layout_title"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/headimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@+id/headimg"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:background="@drawable/shape_white_bkg"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/line_color"/>
                        <TextView
                            android:id="@+id/tv"
                            android:layout_centerInParent="true"
                            android:text="注册"
                            android:textColor="@color/text_color_blue"
                            android:textSize="@dimen/font_32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/line_color"/>
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请输入姓名"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        app:met_iconPadding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/choose_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:id="@+id/tv_sex"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请选择性别"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/edit_card"
                        android:hint="请输入身份证号"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        app:met_iconPadding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请输入手机号码"
                        android:id="@+id/edit_phone"
                        app:met_regexp="@string/regex_phone_number"
                        android:inputType="phone"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        app:met_iconPadding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fl_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:id="@+id/et_verify_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入短信验证码"
                        android:inputType="number"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        app:met_floatingLabel="normal"
                         />

                    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                        android:id="@+id/btn_get_verify_code"
                        style="@style/RoundButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img"
                        android:layout_gravity="end"
                        android:paddingStart="10dp"
                        android:layout_centerVertical="true"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="获取验证码"
                        android:textColor="@color/text_color_no"
                        android:textSize="13sp"
                        app:rb_borderColor="@color/selector_round_button_main_theme_color"
                        app:rb_borderWidth="1dp"
                        app:rb_radius="15dp" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:id="@+id/img"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请输入密码"
                        android:id="@+id/edit_pwd"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_passWordButton="false"
                        android:inputType="textPassword"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请再次输入密码"
                        android:id="@+id/edit_pwd_ag"
                        android:inputType="textPassword"
                        app:met_passWordButton="false"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_primaryColor="@color/line_color"
                        app:met_iconPadding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="北京市"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="北京市院"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="请输入律师执业证号"
                        android:id="@+id/edit_lszh"
                        app:met_passWordButton="false"
                        app:met_floatingLabel="normal"
                        app:met_clearButton="false"
                        app:met_textColorHint="@color/text_color_no"
                        app:met_primaryColor="@color/line_color"
                        app:met_iconPadding="5dp"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                android:paddingBottom="@dimen/dp_5"
                android:id="@+id/choose_lsz"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color"/>
                <TextView
                    android:id="@+id/tv_lsz"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@+id/lszfj_yl"
                    android:textSize="@dimen/font_26"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColorHint="@color/text_color_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hint="律师证附件上传"
                    />
                <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/shape_yl_bkg"
                    android:text="预览"
                    android:visibility="gone"
                    android:id="@+id/lszfj_yl"
                    android:layout_toLeftOf="@+id/yl"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:shadowRadius="5"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_24"
                    app:sb_ripple_color="#ffffff"
                    app:sb_ripple_duration="300"
                    app:sb_shape_type="rectangle" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/yl"
                    app:srcCompat="@drawable/ic_most"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/choose_lsz_time"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:id="@+id/tv_lsz_time"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/lszfj_yl_time"
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="律师证附件有效期上传"
                        />
                    <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/shape_yl_bkg"
                        android:text="预览"
                        android:visibility="gone"
                        android:id="@+id/lszfj_yl_time"
                        android:layout_toLeftOf="@+id/yl1"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:shadowRadius="5"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_24"
                        app:sb_ripple_color="#ffffff"
                        app:sb_ripple_duration="300"
                        app:sb_shape_type="rectangle" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:id="@+id/yl1"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/choose_sfz"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:id="@+id/tv_sfz"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/sfz_yl"
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="身份证附件上传"
                        />
                    <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/shape_yl_bkg"
                        android:text="预览"
                        android:visibility="gone"
                        android:id="@+id/sfz_yl"
                        android:layout_toLeftOf="@+id/y2"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:shadowRadius="5"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_24"
                        app:sb_ripple_color="#ffffff"
                        app:sb_ripple_duration="300"
                        app:sb_shape_type="rectangle" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:id="@+id/y2"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:id="@+id/choose_sfz_time"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/line_color"/>
                    <TextView
                        android:id="@+id/tv_sfz_time"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/sfz_yl_time"
                        android:textSize="@dimen/font_26"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:textColorHint="@color/text_color_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:hint="律师证附件有效期上传"
                        />
                    <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/shape_yl_bkg"
                        android:text="预览"
                        android:visibility="gone"
                        android:id="@+id/sfz_yl_time"
                        android:layout_toLeftOf="@+id/y3"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:shadowRadius="5"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_24"
                        app:sb_ripple_color="#ffffff"
                        app:sb_ripple_duration="300"
                        app:sb_shape_type="rectangle" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:id="@+id/y3"
                        app:srcCompat="@drawable/ic_most"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        tools:ignore="VectorDrawableCompat" />
                </RelativeLayout>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hint="请输入邮箱地址"
                    android:id="@+id/edit_email"
                    app:met_textColorHint="@color/text_color_no"
                    app:met_floatingLabel="normal"
                    app:met_clearButton="false"
                    app:met_primaryColor="@color/line_color"
                    />
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hint="请输入家庭住址"
                    android:id="@+id/edit_address"
                    app:met_floatingLabel="normal"
                    app:met_textColorHint="@color/text_color_no"
                    app:met_clearButton="false"
                    app:met_primaryColor="@color/line_color"
                    app:met_iconPadding="5dp"
                    />

                <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/but_reg"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:gravity="center"
                    android:background="@drawable/shape_but_bkg"
                    android:text="注册"
                    app:sb_radius="90dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:shadowRadius="90"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_30"
                    app:sb_ripple_color="#ffffff"
                    app:sb_ripple_duration="300"
                    app:sb_shape_type="rectangle" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>