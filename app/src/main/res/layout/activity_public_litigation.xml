                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/xui_config_color_red"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/txt_phone_num"
                        android:layout_centerVertical="true"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:hint="请输入联系方式"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="#000"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:id="@+id/et_phone_num"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/xui_btn_gray_normal_color"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:text="注:最多只能上传5张图片，文件只能上传jpg、jpeg、png格式，单个文件不超过50M。"
                android:textColor="@color/xui_config_color_red"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp_30"
                        android:text="提交"
                        android:textColor="@color/picture_color_white"
                        android:gravity="center"
                        android:background="@drawable/button_shape"
                        android:id="@+id/btn_submit"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp_30"
                        android:text="取消"
                        android:textColor="@color/picture_color_white"
                        android:gravity="center"
                        android:background="@drawable/button_shape"
                        android:id="@+id/btn_cancel"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>