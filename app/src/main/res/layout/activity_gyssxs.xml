<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bkg"
    android:orientation="vertical">

    <include
        android:id="@+id/titleview"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_25"
                    android:background="@color/color_b6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="公益诉讼线索信息"
                    android:textColor="@color/but_bkg_start"
                    android:textSize="@dimen/font_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_qkqy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="反映情况所在区域"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/qy_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="本省内某一区域"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="省"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/s_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="市"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/city_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lin_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_0.5"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="注:请描述反应情况所涉及地域"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/xui_config_color_red"
                        android:textSize="@dimen/font_28" />
                </LinearLayout>

                <com.xuexiang.xui.widget.edittext.MultiLineEditText
                    android:id="@+id/content_sjdy"
                    android:layout_marginTop="@dimen/dp_0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:mlet_hintText="内容字数不超过1000字"
                    app:mlet_maxCount="1000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="接收的检察院"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="北京市院"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ajlb_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="案件类别"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/ajlb_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:hint="请选择案件类别"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_shly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="公益损害领域"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/shly_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:hint="请选择公益损害领域"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_25"
                    android:background="@color/color_b6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="违法主体的基本情况"
                    android:textColor="@color/but_bkg_start"
                    android:textSize="@dimen/font_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="姓名/单位"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/name_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="姓名/单位"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="联系地址"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/lxdz_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="联系地址"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="反应情况简要描述"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <com.xuexiang.xui.widget.edittext.MultiLineEditText
                android:id="@+id/content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mlet_hintText="内容字数不超过1000字"
                app:mlet_maxCount="1000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="上传图片区域"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:paddingLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:paddingRight="@dimen/dp_10"
                android:background="@color/white"
                android:overScrollMode="never" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:text="注:最多只能上传5张图片,文件只能上传jpg、jpeg、png格式，单个文件不超过50M。"
                android:textColor="@color/xui_config_color_red"
                android:textSize="@dimen/font_28" />

            <LinearLayout
                android:id="@+id/time_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="图片拍摄日期"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:hint="图片拍摄日期"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_25"
                    android:background="@color/color_b6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="线索提供人信息"
                    android:textColor="@color/but_bkg_start"
                    android:textSize="@dimen/font_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="姓名"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <EditText
                    android:id="@+id/xs_name_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="身份证号码"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />

                <EditText

                    android:id="@+id/idcard_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入身份证号码"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="地址"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/xs_dz_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入地址"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="联系方式"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/xui_config_color_red"
                    android:textSize="@dimen/font_28" />

                <EditText
                    android:id="@+id/xs_phone_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入联系方式"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/picture_color_white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="@color/picture_color_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>